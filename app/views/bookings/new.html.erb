<%= @booking.flight.departure_airport.name %>
<%= @booking.flight.departure_date.strftime("%d/%m") %>
<%= @booking.flight.departure_time.strftime("%H:%M") %>
<%= @booking.flight.arrival_airport.name%>
<%= @booking.flight.arrival_date.strftime("%d/%m") %>
<%= @booking.flight.arrival_time.strftime("%H:%M") %>

<%= form_with model:@booking, data:{turbo:false} do |f| %>
<%=f.hidden_field :flight_id, value: @booking.flight.id%>
<%= fields_for :passenger do |passenger_form|%>
    <%=passenger_form.label :passenger_name, "Passenger Name"%>
    <%=passenger_form.text_field :passenger_name%>
    <%=passenger_form.label :passenger_email, "Passenger Email"%>
    <%=passenger_form.text_field :passenger_email%>
    <% end %>
<%=f.submit "Submit"%>

<%end%>
